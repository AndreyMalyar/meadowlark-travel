{
  "name": "express_server",
  "version": "1.0.0",
  "description": "Практика работы с Node.js, Express и Handlebars с тестированием",
  "main": "meadowlark.js",
  "type": "module",
  "scripts": {
    "start": "node meadowlark.js",
    "dev": "nodemon meadowlark.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:unit": "node --experimental-vm-modules node_modules/jest/bin/jest.js lib/__tests__/",
    "test:e2e": "node --experimental-vm-modules node_modules/jest/bin/jest.js integration-tests/",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "keywords": [
    "express",
    "handlebars",
    "nodejs",
    "jest",
    "puppeteer",
    "testing",
    "learning"
  ],
  "author": "Malyar Andrey",
  "license": "ISC",
  "dependencies": {
    "express": "^5.1.0",
    "express-handlebars": "^8.0.1"
  },
  "devDependencies": {
    "eslint": "^9.39.1",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "portfinder": "^1.0.38",
    "puppeteer": "^24.29.1"
  }
}
